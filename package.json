{
  "name": "clover-lightspeed-bridge",
  "version": "1.0.0",
  "description": "Real-time order bridge between Clover Kiosk and Lightspeed Retail",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "worker": "ts-node-dev --respawn --transpile-only src/worker.ts",
    "start": "node dist/index.js",
    "start:worker": "node dist/worker.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:clover": "ts-node scripts/test-clover-connection.ts",
    "test:lightspeed": "ts-node scripts/test-lightspeed-connection.ts",
    "test:integration": "ts-node scripts/test-end-to-end.ts",
    "get:account-id": "ts-node scripts/get-lightspeed-account-id.ts",
    "setup:clover-oauth": "ts-node scripts/setup-clover-oauth.ts"
  },
  "keywords": [
    "clover",
    "lightspeed",
    "integration",
    "kiosk"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.928.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/pino": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
